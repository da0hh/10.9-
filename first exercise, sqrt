#include <iostream>
#include <cmath>

using namespace std;

int main(){
  float a, b, c;
  cout << "Type sqrt exercise: "; cin >> a >> b >> c;
  if (c == 0 || a == 0 || b == 0) { 
    std::cout << "Not a quadratic equation!" << endl;
  }
  else if (b > 0 || b < 0) {
    float discriminant = pow(b, 2) - 4 * a * c;
    if (discriminant >= 1){
      float x1 = (-b + sqrt(discriminant)) / (2  * a);
      float x2 = (-b - sqrt(discriminant)) / (2 * a);
      std::cout  << "Root 1, 2: " << x1 << ", " << x2 << endl;
    }
    else if (discriminant == 0){
      float x = b + std::sqrt(discriminant * discriminant) / (2 * a);
      cout << "Root: " << discriminant << endl;
    }
    else {
      cout << "Complex scenario is not supported!" << endl;
    }
  }
}
